<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--region 文字样式-->
    <style name="PlaText">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="PlaTextTitle" parent="PlaText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pla_text_title</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PlaTextTitle.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaTextTitle.Small" parent="PlaTextTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlaTextTitle.Normal" parent="PlaTextTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PlaTextTitle.NormalBold" parent="PlaTextTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaTextTitle.Big" parent="PlaTextTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlaTextTitle.Large" parent="PlaTextTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PlaTextTitle.Huge" parent="PlaTextTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PlaTextTitle.HugePlus" parent="PlaTextTitle">
        <item name="android:textSize">24sp</item>
    </style>
    <!--正文文字-->
    <style name="PlaTextBody" parent="PlaText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pla_text_title</item>
    </style>

    <style name="PlaTextBody.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaTextBody.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlaTextBody.Normal">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PlaTextBody.Big">
        <item name="android:textSize">16sp</item>
    </style>
    <!--辅助内容-->
    <style name="PlaTextAssist" parent="PlaText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pla_text_assist</item>
    </style>

    <style name="PlaTextAssist.Mini">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PlaTextAssist.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaTextAssist.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlaTextAssist.Normal">
        <item name="android:textSize">15sp</item>
    </style>
    <!--说明内容-->
    <style name="PlaTextDescription" parent="PlaText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pla_text_description</item>
    </style>

    <style name="PlaTextDescription.Mimi">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PlaTextDescription.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaTextDescription.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlaTextDescription.Normal">
        <item name="android:textSize">15sp</item>
    </style>
    <!--文字Disable -->
    <style name="PlaTextDisable" parent="PlaText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pla_text_description</item>
    </style>

    <style name="PlaTextDisable.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaTextDisable.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlaTextDisable.Normal">
        <item name="android:textSize">15sp</item>
    </style>
    <!--endregion-->

    <!--region 按钮样式-->
    <style name="PlanetButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <!--去除透明Padding-->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
<!--        <item name="android:stateListAnimator">@null</item>-->
        <item name="android:padding">0dp</item>
<!--        <item name="rippleColor">@null</item>-->
    </style>

    <style name="PlaButtonPositive" parent="PlanetButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/pla_white</item>
    </style>

    <style name="PlaButtonNegative" parent="PlanetButton">
        <item name="android:backgroundTint">@color/pla_btn_negative_bg</item>
        <item name="android:textColor">@color/pla_btn_negative_text</item>
    </style>

    <style name="PlaButtonDisable" parent="PlanetButton">
        <item name="android:backgroundTint">@color/pla_btn_disable_bg</item>
        <item name="android:textColor">@color/pla_btn_disable_text</item>
    </style>
    <!--大按钮-->
    <style name="PlaButtonPositive.Big">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="cornerRadius">@dimen/pla_corner_radius_big</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlaButtonNegative.Big">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="cornerRadius">@dimen/pla_corner_radius_big</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlaButtonDisable.Big">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="cornerRadius">@dimen/pla_corner_radius_big</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--普通按钮-->
    <style name="PlaButtonPositive.Normal">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/pla_corner_radius_tiny</item>
    </style>

    <style name="PlaButtonNegative.Normal">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/pla_corner_radius_tiny</item>
    </style>

    <style name="PlaButtonDisable.Normal">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/pla_corner_radius_tiny</item>
    </style>
    <!--小按钮-->
    <style name="PlaButtonPositive.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance"></item>
    </style>

    <style name="PlaButtonNegative.Small">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaButtonDisable.Small">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--endregion-->


    <!--region Switch开关-->
    <style name="PlaSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:track">@drawable/pla_switch_track</item>
        <item name="android:thumb">@drawable/pla_switch_thumb</item>
        <!--去掉点击时的圆圈-->
        <item name="android:background">@null</item>
    </style>
    <!--endregion-->

    <!--region 输入框样式-->
    <style name="PlaEditText">
        <item name="android:paddingStart">6dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--endregion-->

    <!--region 二级菜单icon-->
    <style name="PlaSecondaryMenuIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:padding">3dp</item>
        <item name="tint">@color/onSurface</item>
    </style>
    <!--endregion-->

    <!--region 界面背景色-->
    <style name="PlaBackground">
        <item name="android:background">@color/pla_white</item>
    </style>
    <!--endregion-->

    <!--region 边框样式-->
    <style name="PlaBorder" />

    <style name="PlaBorder.Light">
        <item name="android:background">@color/pla_border_light</item>
    </style>

    <style name="PlaBorder.Middle">
        <item name="android:background">@color/pla_border_middle</item>
    </style>

    <style name="PlaBorder.Dark">
        <item name="android:background">@color/pla_border_dark</item>
    </style>
    <!--endregion-->

    <!--region 分割线样式-->
    <style name="PlaDivider" />

    <style name="PlaDivider.Light">
        <item name="android:background">@color/pla_divider_light</item>
    </style>

    <style name="PlaDivider.Middle">
        <item name="android:background">@color/pla_divider_middle</item>
    </style>

    <style name="PlaDivider.Dark">
        <item name="android:background">@color/pla_divider_dark</item>
    </style>
    <!--endregion-->

    <!--region MD3-->
    <style name="PlaFloatActionButtonStyle" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="elevation">0dp</item>
        <item name="rippleColor">@null</item>
        <item name="shapeAppearanceOverlay">@style/CircleShapeAppearance</item>
        <item name="pressedTranslationZ">0dp</item>
    </style>

    <style name="CircleShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RadiusShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--Toolbar-->
    <style name="PlaToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="titleCentered">true</item>
        <item name="android:background">@color/pla_status_bar_color</item>
        <item name="titleTextAppearance">@style/ToolBarTitle</item>
        <item name="navigationIcon">@drawable/pla_ic_arrow_left</item>
        <item name="navigationIconTint">@color/onSurface</item>
        <item name="subtitleCentered">true</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitle</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textColor">@color/pla_text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="ToolbarSubtitle">
        <item name="android:textColor">@color/pla_text_assist</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!--endregion-->

    <!--region Dialog及其弹出动画样式-->
    <style name="LoadingDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--自定义Dialog样式-->
    <style name="PlaDialog" parent="AlertDialog.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <!--顶部弹出动画-->
    <style name="PlaTopAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pla_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/pla_slide_out_top</item>
    </style>
    <!--底部弹出动画-->
    <style name="PlaBottomAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pla_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/pla_slide_out_bottom</item>
    </style>
    <!--左边弹出动画-->
    <style name="PlaLeftAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pla_slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/pla_slide_out_left</item>
    </style>
    <!--右边弹出动画-->
    <style name="PlaRightAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pla_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/pla_slide_out_right</item>
    </style>
    <!--endregion-->

  <!--region 微信录页面样式-透明弹窗-->
    <style name="WeChatLoginActivityStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>
  <!--endregion-->

</resources>