<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--region **********文字样式**********-->
    <style name="Text">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!--**********标题文字**********-->
    <style name="TextTitle" parent="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pla_text_primary</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextTitle.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextTitle.Small" parent="TextTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitle.Normal" parent="TextTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextTitle.Big" parent="TextTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitle.Large" parent="TextTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTitle.Huge" parent="TextTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextTitle.HugePlus" parent="TextTitle">
        <item name="android:textSize">24sp</item>
    </style>

    <!--**********正文文字**********-->
    <style name="TextBody" parent="Text">
        <item name="android:textColor">@color/pla_text_primary</item>
    </style>

    <style name="TextBody.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBody.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBody.Normal">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextBody.Big">
        <item name="android:textSize">16sp</item>
    </style>

    <!--辅助文字-->
    <style name="TextAssist" parent="Text">
        <item name="android:textColor">@color/pla_text_assist</item>
    </style>

    <style name="TextAssist.Mini">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAssist.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAssist.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAssist.Normal">
        <item name="android:textSize">15sp</item>
    </style>

    <!--说明性文字-->
    <style name="TextDescription" parent="Text">
        <item name="android:textColor">@color/pla_text_description</item>
    </style>

    <style name="TextDescription.Mimi">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextDescription.Tiny">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextDescription.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextDescription.Normal">
        <item name="android:textSize">15sp</item>
    </style>
    <!--endregion-->

    <!--region **********文字按钮样式**********-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@drawable/pla_selector_btn_text_color</item>
        <item name="android:elevation">0dp</item>
        <!--关闭按钮点击放大效果-->
        <item name="android:stateListAnimator">@null</item>
        <!--关闭按钮点击水波纹效果-->
        <item name="rippleColor">@null</item>
        <!--关闭字母默认大写-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="cornerRadius">@dimen/pla_text_corner_radius_small</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button.Normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="cornerRadius">@dimen/pla_text_corner_radius_normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.Big">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="cornerRadius">@dimen/pla_text_corner_radius_normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--普通按钮-->
    <style name="Button.Small.Primary">
        <item name="android:backgroundTint">@drawable/pla_selector_btn_primary_bg</item>
    </style>

    <style name="Button.Normal.Primary">
        <item name="android:backgroundTint">@drawable/pla_selector_btn_primary_bg</item>
    </style>

    <style name="Button.Big.Primary">
        <item name="android:backgroundTint">@drawable/pla_selector_btn_primary_bg</item>
    </style>
    <!--警告、错误按钮-->
    <style name="Button.Small.Warning">
        <item name="android:backgroundTint">@drawable/pla_selector_btn_warning_bg</item>
    </style>

    <style name="Button.Normal.Warning">
        <item name="android:backgroundTint">@drawable/pla_selector_btn_warning_bg</item>
    </style>

    <style name="Button.Big.Warning">
        <item name="android:backgroundTint">@drawable/pla_selector_btn_warning_bg</item>
    </style>
    <!--endregion-->

    <!--region **********Switch开关**********-->
    <style name="Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:track">@drawable/pla_switch_track</item>
        <item name="android:thumb">@drawable/pla_switch_thumb</item>
        <item name="android:background">@null</item> <!--去掉点击时的圆圈-->
    </style>
    <!--endregion-->

    <!--region **********输入框样式**********-->
    <style name="EditText">
        <item name="android:paddingStart">6dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/pla_shape_ed</item>
    </style>
    <!--endregion-->

    <!--region **********单选框**********-->
    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/pla_check_box</item>
    </style>
    <!--endregion-->

    <!--region **********二级菜单icon**********-->
    <style name="SecondaryMenuIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:padding">3dp</item>
        <item name="tint">@color/onSurface</item>
    </style>
    <!--endregion-->

    <!--region **********界面背景色**********-->
    <style name="Background">
        <item name="android:background">@color/pla_white</item>
    </style>
    <!--endregion-->

    <!--region **********边框样式**********-->
    <style name="Border" />

    <style name="Border.Light">
        <item name="android:background">@color/pla_line_light</item>
    </style>

    <style name="Border.Middle">
        <item name="android:background">@color/pla_line_middle</item>
    </style>

    <style name="Border.Dark">
        <item name="android:background">@color/pla_line_deep</item>
    </style>
    <!--endregion-->

    <!--region **********分割线样式**********-->
    <style name="Divider" />

    <style name="Divider.Light">
        <item name="android:background">@color/pla_line_light</item>
    </style>

    <style name="Divider.Middle">
        <item name="android:background">@color/pla_line_middle</item>
    </style>

    <style name="Divider.Dark">
        <item name="android:background">@color/pla_line_deep</item>
    </style>
    <!--endregion-->

    <!--region **********MD3**********-->
    <style name="FloatActionButtonStyle" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="elevation">0dp</item>
        <item name="rippleColor">@null</item>
        <item name="shapeAppearanceOverlay">@style/CircleShapeAppearance</item>
        <item name="pressedTranslationZ">0dp</item>
    </style>

    <style name="CircleShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RadiusShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--Toolbar-->
    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="titleCentered">true</item>
        <item name="android:background">@color/pla_status_bar_color</item>
        <item name="titleTextAppearance">@style/ToolBarTitle</item>
        <item name="navigationIcon">@drawable/pla_ic_arrow_left</item>
        <item name="navigationIconTint">@color/onSurface</item>
        <item name="subtitleCentered">true</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitle</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textColor">@color/pla_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="ToolbarSubtitle">
        <item name="android:textColor">@color/pla_text_assist</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!--endregion-->

    <!--region **********Dialog及其弹出动画样式**********-->
    <style name="LoadingDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--自定义Dialog样式-->
    <style name="Dialog" parent="AlertDialog.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <!--顶部弹出动画-->
    <style name="TopAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pla_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/pla_slide_out_top</item>
    </style>
    <!--底部弹出动画-->
    <style name="BottomAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pla_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/pla_slide_out_bottom</item>
    </style>
    <!--左边弹出动画-->
    <style name="LeftAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pla_slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/pla_slide_out_left</item>
    </style>
    <!--右边弹出动画-->
    <style name="RightAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pla_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/pla_slide_out_right</item>
    </style>
    <!--endregion-->

    <!--region **********微信录页面样式-透明弹窗**********-->
    <style name="WeChatLoginActivityStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--endregion-->

</resources>